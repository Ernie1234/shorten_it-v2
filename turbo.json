{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*local"],
  "globalEnv": [
    "MONGO_URI",
    "REDIS_URL",
    "REDIS_TOKEN",
    "JWT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GOOGLE_CALLBACK_URL",
    "WEB_APP_URL",
    "MOBILE_APP_URL",
    "API_GATEWAY_PORT",
    "AUTH_SERVICE_PORT",
    "URL_SERVICE_PORT",
    "REDIS_PASSWORD",
    "REDIS_HOST",
    "REDIS_PORT",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "check-types": {
      "outputs": [],
      "dependsOn": ["^check-types"]
    }
  }
}
